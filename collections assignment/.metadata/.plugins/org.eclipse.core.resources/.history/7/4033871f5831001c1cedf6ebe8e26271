import java.util.Scanner;

public class Pattern {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n= sc.nextInt();
		for(int i=0;i<n;i++) {
			for(int i=0;i<i;i++) {
				System.out.print("&");
			}
			System.out.println();
		}
		
		// TODO Auto-generated method stub

	}

}
